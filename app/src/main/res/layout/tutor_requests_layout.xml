<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/student_req_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="false"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/usericon" />

    <TextView
        android:id="@+id/student_req_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/student_req_image"
        android:fontFamily="serif"
        android:text="Nipa"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <Button
        android:id="@+id/tutor_reqview_accbtn"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/student_req_image"
        android:layout_alignStart="@+id/student_req_name"
        android:background="@drawable/button_style1"
        android:paddingEnd="30dp"
        android:paddingStart="30dp"
        android:text="Accept"
        android:textSize="12sp" />

    <Button
        android:id="@+id/tutor_reqview_declinebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tutor_reqview_accbtn"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp"
        android:background="@drawable/button_style2"
        android:paddingEnd="30dp"
        android:paddingStart="30dp"
        android:text="Decline"
        android:textSize="12sp" />

</RelativeLayout>