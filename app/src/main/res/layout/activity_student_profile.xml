<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentProfileActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/tutor_details_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/usericon" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tutor_details_image"
        android:layout_marginStart="13dp"
        android:layout_marginTop="39dp"
        android:text="Name"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/studentprofile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Iffti Chy"
        android:layout_alignBaseline="@+id/textView17"
        android:layout_alignBottom="@+id/textView17"
        android:layout_alignStart="@+id/studentprofile_institution" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView17"
        android:layout_below="@+id/studentprofile_name"
        android:layout_marginTop="40dp"
        android:text="Institution"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/studentprofile_institution"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/studentprofile_name"
        android:layout_marginStart="15dp"
        android:layout_marginTop="27dp"
        android:layout_toEndOf="@+id/textView18"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Leading University,Sylhet" />

    <Button
        android:id="@+id/studentprofile_savebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/studentprofile_institution"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:background="@drawable/button_style1"
        android:padding="10dp"
        android:text="Save Changes"
        android:textColor="@android:color/white" />

    <ImageButton
        android:id="@+id/studentprofile_imagebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tutor_details_image"
        android:layout_toEndOf="@+id/tutor_details_image"
        app:srcCompat="@mipmap/ic_add_a_photo_black_24dp" />

</RelativeLayout>
