<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="#ffd699"
                />
            <corners
                android:radius="0dp"
                />
        </shape>
    </item>

    <item>
        <shape>
            <solid
                android:color="#ffff"
                />
            <corners
                android:radius="0dp"
                />
            <stroke
                android:width="3dp"
                android:color="@color/colorPrimary"
                />
        </shape>
    </item>

</selector>